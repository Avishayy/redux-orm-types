{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "importHelpers": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["esnext","es6", "es7", "es2015", "es2016", "es2017", "es2018"],
    "outDir": "out",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "../types",
    "typeRoots": ["../types", "./node_modules/@types"],
    "types": ["jest"],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*.ts"]
}
